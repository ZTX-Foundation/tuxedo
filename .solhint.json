{
  "extends": "solhint:recommended",
  "rules": {
    "compiler-version": [
      "error",
      "^0.8.0"
    ],
    "reason-string": [
      "warn",
      {
        "maxLength": 64
      }
    ],
    "func-visibility": [
      "warn",
      {
        "ignoreConstructors": true
      }
    ],
    "no-empty-blocks": "off"
  }
}